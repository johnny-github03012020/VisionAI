# Server Configuration
PORT=3000

# JWT Secret Key (change this in your .env file to a strong random string)
JWT_SECRET=your_jwt_secret_key_here

# File System Paths (defaults are relative to project root if not absolute)
UPLOAD_DIR=uploads
TEMP_DIR=uploads/temp

# FFmpeg Path (if not in system PATH, provide absolute path or path relative to project root)
FFMPEG_PATH=ffmpeg

# Default Video Generation Settings
DEFAULT_DURATION=10
DEFAULT_VIDEO_STYLE=cinematic
DEFAULT_AI_PROVIDER=OLLAMA # Example, can be OPENAI, STABILITY, etc.
DEFAULT_FPS=25
MAX_VIDEO_DURATION=30 # Maximum duration in seconds

# AI Service Endpoints and Keys (Fill these with your actual keys and endpoints)
# Ollama
OLLAMA_API_ENDPOINT=http://localhost:11434/api 
OLLAMA_TEXT_MODEL=llama3
OLLAMA_IMAGE_MODEL=llava

# OpenAI
OPENAI_API_KEY=
OPENAI_API_ENDPOINT=https://api.openai.com/v1

# Stability AI
STABILITY_API_KEY=
STABILITY_AI_ENDPOINT=https://api.stability.ai/v1/generation

# HuggingFace
HUGGINGFACE_API_KEY=
HUGGINGFACE_INFERENCE_ENDPOINT=https://api-inference.huggingface.co/models
HUGGINGFACE_TEXT_MODEL=gpt2 # Example model
HUGGINGFACE_IMAGE_MODEL=stabilityai/stable-diffusion-2 # Example model

# LocalAI
LOCALAI_ENDPOINT=http://localhost:8080/v1
LOCALAI_TEXT_MODEL=gpt-4
LOCALAI_IMAGE_MODEL=sdxl

# RunwayML
RUNWAY_API_KEY=
RUNWAY_API_ENDPOINT=https://api.runwayml.com/v1 # Example, verify actual endpoint

# Feature Flags & Other Settings
ENABLE_TEXT_TO_SPEECH=false
ENABLE_BACKGROUND_MUSIC=false
MAX_VIDEO_LENGTH= # Unclear what this is for, from routes/api.js
USE_FALLBACK=true # Whether to use fallback AI providers
FALLBACK_TO_COMMERCIAL=false # Whether fallbacks should include commercial providers
